params {
    samplesheet = "s3://my-bucket/cd1/samplesheet.csv"
    ref_genome  = "s3://my-bucket/cd1/GSE209815_Cd1_final.fa"
    gtf         = "s3://my-bucket/cd1/GSE209815_Cd1_genes.gtf"
    sample_names = "s3://my-bucket/cd1/sampleNames.csv"

    outdir = "s3://my-bucket/cd1/results/"
    refdir = "s3://my-bucket/cd1/refs/"
}

profiles {

    // Local execution (for testing)
    local {
        process.executor = 'local'
        process.cpus = 2
    }

    // AWS Batch execution
    aws {
        process.executor = 'awsbatch'
        process.queue = 'cd1-queue'         // Your AWS Batch queue name
        workDir = "s3://my-bucket/cd1/work" // Required â€” location of Nextflow work dir

        aws.region = 'us-east-1'
        aws.batch.cliPath = '/usr/local/bin/aws'
    }

    // Conda for local testing
    conda {
        conda.enabled = true
    }

    // Docker for AWS Batch
    docker {
        docker.enabled = true
        docker.runOptions = '-u \$(id -u):\$(id -g)'
    }
}

resume = true
