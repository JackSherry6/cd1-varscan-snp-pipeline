params {
    samplesheet = "$projectDir/samplesheet.csv"
    ref_genome = "/path/to/GSE209815_Cd1_final.fa"
    gtf = "/path/to/GSE209815_Cd1_genes.gtf"
    sample_names = "$projectDir/sampleNames.csv"

    outdir = "$projectDir/results/"
    refdir = "$projectDir/refs/"

}

profiles {
    conda {
        conda.enabled = true
    }
    singularity {
        singularity.enabled = true
        singularity.autoMounts = true
    }
    cluster {
        process {
                executor = 'sge'
                clusterOptions = '-P wax-es'
                penv = 'omp'

                withLabel: process_single {
                    cpus = 1
                }

                withLabel: process_low {
                    cpus = 4

                }
                withLabel: process_medium {
                    cpus = 8
                }
                
                withLabel: process_high {
                    cpus = 16
                }
        }
    }

    local {
        process.executor = 'local'
    }
}

executor {
    $sge {
        queueSize = 17
    }
    $local {
        cpus = 1
    }
}

resume = true
